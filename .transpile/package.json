{
  "name": "fidus-writer",
  "description": "Install dependencies for ES6 transpilation",
  "scripts": {
    "get_mml2omml": "mkdir -p ../static-libs/xsl/ && wget https://raw.githubusercontent.com/AbiWord/abiword/14cbf144cb10a5a5ea6ee11275f7178ca4ff055a/plugins/openxml/omml_xslt/mml2omml.xsl -O ../static-libs/xsl/mml2omml.xsl",
    "copy_fontawesome": "mkdir -p ../static-libs/fontawesome/ && cp -r node_modules/@fortawesome/fontawesome-free/css ../static-libs/fontawesome/ && cp -r node_modules/@fortawesome/fontawesome-free/webfonts ../static-libs/fontawesome/",
    "copy_prosemirror_css": "mkdir -p ../static-libs/css/ && cp node_modules/prosemirror-view/style/prosemirror.css ../static-libs/css/ && cp node_modules/prosemirror-menu/style/menu.css ../static-libs/css/prosemirror-menu.css && cp node_modules/prosemirror-example-setup/style/style.css ../static-libs/css/prosemirror-example-setup.css",
    "copy_mathlive_css": "mkdir -p ../static-libs/css/ && cp node_modules/mathlive/dist/mathlive*.css ../static-libs/css/",
    "copy_mathlive_fonts": "mkdir -p ../static-libs/css/fonts/ && cp node_modules/mathlive/dist/fonts/* ../static-libs/css/fonts/",
    "copy_vivliostyle_resources": "mkdir -p ../static-libs/vivliostyle-resources/ && cp node_modules/vivliostyle-print/dist/resources/* ../static-libs/vivliostyle-resources/",
    "postinstall": "npm run get_mml2omml && npm run copy_fontawesome && npm run copy_prosemirror_css && npm run copy_mathlive_css && npm run copy_mathlive_fonts && npm run copy_vivliostyle_resources && npm run get_citation_locale && npm run copy_croppedjs_css",
    "babel-transform-template-literals": "babel --plugins @babel/plugin-transform-template-literals,@babel/plugin-syntax-dynamic-import",
    "get_citation_locale": "mkdir -p ../static-libs/js/modules/citations/ && echo -n 'export const enUSLocale=`' > ../static-libs/js/modules/citations/enUS_locale.js && wget -qO- https://raw.githubusercontent.com/citation-style-language/locales/master/locales-en-US.xml >> ../static-libs/js/modules/citations/enUS_locale.js && echo '`' >> ../static-libs/js/modules/citations/enUS_locale.js",
    "copy_croppedjs_css": "mkdir -p ../static-libs/css/ && cp node_modules/cropperjs/dist/cropper.min.css ../static-libs/css/"
  },
  "author": "Johannes Wilm",
  "license": "AGPL",
  "private": true,
  "dependencies": {
    "diff-dom": "4.1.3",
    "downloadjs": "1.4.7",
    "@fortawesome/fontawesome-free": "^5.9.0",
    "w3c-keyname": "1.1.x",
    "simple-datatables": "^2.1.6",
    "vivliostyle-print": "1.1.15",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.18.0",
    "babel-eslint": "^10.0.2",
    "@babel/preset-env": "7.4.x",
    "@babel/core": "7.4.x",
    "@babel/plugin-syntax-dynamic-import": "7.2.x",
    "babel-loader": "8.0.x",
    "webpack": "4.30.x",
    "webpack-cli": "3.3.x",
    "bowser": "1.9.x",
    "citeproc": "2.1.x",
    "fastdom": "1.0.9",
    "fast-deep-equal": "2.0.x",
    "fast-json-patch": "2.0.x",
    "fix-utf8": "1.0.4",
    "jszip": "3.2.1",
    "jszip-utils": "0.0.2",
    "mathlive": "0.29.x",
    "orderedmap": "1.0.0",
    "prosemirror-collab": "1.1.x",
    "prosemirror-commands": "1.0.x",
    "prosemirror-dropcursor": "1.1.x",
    "prosemirror-example-setup": "1.0.x",
    "prosemirror-gapcursor": "1.0.x",
    "prosemirror-history": "~1.0.4",
    "prosemirror-keymap": "1.0.x",
    "prosemirror-model": "1.7.x",
    "prosemirror-schema-basic": "1.0.x",
    "prosemirror-schema-list": "1.0.x",
    "prosemirror-state": "1.2.x",
    "prosemirror-tables": "0.7.x",
    "prosemirror-transform": "1.1.x",
    "prosemirror-view": "1.7.x",
    "prosemirror-suggestions": "0.2.x",
    "texzilla": "1.0.1",
    "system": "2.0.1",
    "pretty": "2.0.0",
    "sortablejs": "1.8.x",
    "object-hash": "1.3.1",
    "biblatex-csl-converter": "1.6.x",
    "tokenfield": "^1.2.2",
    "cropperjs": "^1.5.2"
  },
  "devDependencies": {
    "updates": "^8.0.2",
    "@babel/cli": "^7.4.4",
    "@babel/plugin-transform-template-literals": "^7.4.4"
  }
}
